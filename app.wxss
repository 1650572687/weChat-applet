@import './styles/iconfont.wxss';
/*设置初始样式*/
page,view,text,swiper,swiper-item,image,navigator{
  padding:0;
  margin:0;
  box-sizing: border-box;
}

/*主题颜色 通过变量来实现
1 less 中 存在变量这个只是
2 原生的css和wxss也是支持变量
*/

page{
/*原生定义主题颜色*/
  --themeColor:#eb4450;
  /*定义统一的字体大小  假设设计稿 大小是 375px
    1px = 2rpx
    14px = 28rpx
  */
  font-size:28rpx;
}