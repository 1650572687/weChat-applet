<view class="cates">
  <SearchInput></SearchInput>
  <view class="cates_box">
    <scroll-view scroll-y class="left">
      <view class="left-item {{index===clickindex?'active':''}}" hover-class="none" hover-stop-propagation="false"
        wx:for="{{leftTitle}}"
        wx:key="*this"
        bindtap="handlerItemTap"
        data-index='{{index}}'
      >
        {{item}}
      </view>
    </scroll-view>
    <scroll-view scroll-y class="right">
      <view class="right_box" hover-class="none" hover-stop-propagation="false"
        wx:for="{{rightConent}}"
        wx:key="{{cat_id}}"
        wx:for-item="item1"
        wx:for-index="index1"
      >
        <view class="right_title">
          <view class="fenge" hover-class="none" hover-stop-propagation="false">
            /
          </view>
          <view class="title" hover-class="none" hover-stop-propagation="false">
            {{item1.cat_name}}
          </view>
          <view class="fenge" hover-class="none" hover-stop-propagation="false">
            /
          </view>
        </view>
        <view class="goods_list" hover-class="none" hover-stop-propagation="false">
          <navigator
            class="goods_item"
            wx:for="{{item1.children}}"
            wx:key="{{cat_id}}"
            wx:for-item="item2"
            wx:for-index="index2"
          >
            <image class="" src="{{item2.cat_icon}}" mode="widthFix" lazy-load="false" binderror="" bindload="">
              
            </image>
            <view class="goods_title" hover-class="none" hover-stop-propagation="false">
              {{item2.cat_name}}
            </view>
          </navigator>
        </view>

      </view>
    </scroll-view>

  </view>
</view>
