<view class="pyg_index">
  <!-- 搜索框 -->
  <SearchInput></SearchInput>
  <!-- 轮播图 -->
  <view class="index_swiper">
      <!-- 
        1 swiper标签存在默认的宽度和高度
          100%*150px
        2 image标签也存在默认的宽度和高度
          32opx*240px
        3 根据原图的比例换算宽高
          1 原图宽高  750*340
          2 让图片的高度自适应 宽度等于 100%
          3 让swiper标签的高度 变成和图片一样高
        4 图片标签
          mode属性 渲染模式
          widthFix 让图片的标签宽高 和 图片标签的内容的宽高 等比发生变化
      -->
      <swiper indicator-dots="true" autoplay="true" interval="5000" circular="true ">
          <swiper-item wx:for="{{bannerList}}" wx:key="{{goods_id}}">
            <navigator>
            <image mode="widthFix" src="{{item.image_src}}" alt=""></image>
            </navigator>
          </swiper-item>
      </swiper>
  </view>
  <!-- 导航栏 -->
  <view class="index_cates">
    <navigator wx:for="{{catesList}}" wx:key="name">
      <image class="" src="{{item.image_src}}" mode="widthFix">
        
      </image>
    </navigator>
  </view>

  <!-- 楼层开始 -->
  <view class="index_floor">
    <view class="floor_group" hover-class="none" hover-stop-propagation="false"
    wx:for="{{floorList}}"
    wx:for-index="index1"
    
    wx:for-item="item1"
    wx:key="index1"
    >
      <view class="floor_title" hover-class="none" hover-stop-propagation="false">
        <image class="" src="{{item1.floor_title.image_src}}" mode="widthFix" lazy-load="false" binderror="" bindload=""></image>
      </view>
      <view class="floor_list" hover-class="none" hover-stop-propagation="false">
        <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate"
          wx:for="{{item1.product_list}}"
          wx:for-index="index2"
          wx:for-item="item2"
          wx:key="name"

        >
          <image class=""  src="{{item2.image_src}}" mode="{{index2 === 0 ?'widthFix' : 'scaleToFill'}}" lazy-load="false" binderror="" bindload="">
          </image>
        </navigator>
      </view>
    </view>
  </view>
  <!-- 楼层结束 -->
</view>