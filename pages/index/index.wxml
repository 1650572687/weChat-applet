<view class="pyg_index">
  <!-- 搜索框 -->
  <SearchInput></SearchInput>
  <!-- 轮播图 -->
  <view class="index_swiper">
      <!-- 
        1 swiper标签存在默认的宽度和高度
          100%*150px
        2 image标签也存在默认的宽度和高度
          32opx*240px
        3 根据原图的比例换算宽高
          1 原图宽高  750*340
          2 让图片的高度自适应 宽度等于 100%
          3 让swiper标签的高度 变成和图片一样高
        4 图片标签
          mode属性 渲染模式
          widthFix 让图片的标签宽高 和 图片标签的内容的宽高 等比发生变化
      -->
      <swiper indicator-dots="true" autoplay="true" interval="5000" circular="true ">
          <swiper-item wx:for="{{bannerList}}" wx:key="{{goods_id}}">
            <navigator>
            <image mode="widthFix" src="{{item.image_src}}" alt=""></image>
            </navigator>
          </swiper-item>
      </swiper>
  </view>
  <!-- 导航栏 -->
  <view class="index_cates">
    <navigator wx:for="{{catesList}}" wx:key="name">
      <image class="" src="{{item.image_src}}" mode="widthFix">
        
      </image>
    </navigator>
  </view>
</view>