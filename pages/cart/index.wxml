<!--pages/cart/index.wxml-->
<!--收货地址-->
<view class="revice_address_row" hover-class="none" hover-stop-propagation="false">
    <view class="address_btn" hover-class="none" hover-stop-propagation="false" wx:if="{{!address.userName}}">
        <button plain type="primary" bindtap="handlerGetAddress">获取收货地址</button>
    </view>

    <view wx:else class="user_info_row" hover-class="none" hover-stop-propagation="false">
        <view class="user_info">
            <view class="" hover-class="none" hover-stop-propagation="false">
                {{address.userName}}
            </view>
            <view class="" hover-class="none" hover-stop-propagation="false">
                {{address.all}}
            </view>
        </view>
        <view class="user_phone">{{address.telNumber}}</view>
    </view>
</view>

<!--购物车内容-->
<view class="cart_content">
    <view class="cart_title">购物车</view>
    <view class="cart_main">
        <view class="cart_item" wx:for="{{cart}}" wx:key="goods_id">
            <!--复选框-->
            <view class="cart_chk_wrap">
                <checkbox-group data-id="{{item.goods_id}}" bindchange="handlerCheck">
                    <checkbox class="" value=""  checked="{{item.checked}}" color="">
                        
                    </checkbox>
                </checkbox-group>
                  
            </view>
            <!--商品图片-->
            <navigator class="cart_img_wrap" target="" url="" hover-class="navigator-hover" open-type="navigate">
                <image class="" src="{{item.goods_small_logo}}" mode="widthFix" lazy-load="false" binderror="" bindload="" />
            </navigator>
              
            <!--商品信息-->
            <view class="cart_info_wrap">
                <view class="goods_name">
                    {{item.goods_name}}
                </view>
                <view class="goods_price_wrap">
                    <view class="goods_price">￥{{item.goods_price}}</view>
                    <view class="cart_num_tool">
                        <view class="num_edit" data-id='{{item.goods_id}}' bindtap="editGoodsNum">-</view>
                        <view class="goods_num">{{item.num}}</view>
                        <view class="num_edit" data-id='{{item.goods_id}}' bindtap="addGoodsNum">+</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

<!--D底部工具栏-->
<view class="footer_tool">
    <!--全选-->
    <view class="all_chk_wrap">
        <checkbox-group  bindchange="handlerAllCheck">
            <checkbox checked="{{allChecked}}">全选</checkbox>
        </checkbox-group>
          
    </view>
    <!--总价格-->
    <view class="total_price_wrap">
        <view class="total_price">
            合计：<text class="total_price_text">￥{{totalPrice}}</text> 
        </view>
        <view>包含运费</view>
    </view>
    <!--结算-->
    <view class="order_pay_wrap">
        结算({{totalNum}})
    </view>
</view>
